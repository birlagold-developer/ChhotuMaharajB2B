<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PreAnalysisActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/splash_logo"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chottu_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CHHOTU"
                    android:textColor="#ff00"
                    android:textSize="40dp"
                    />


                <TextView
                    android:id="@+id/maharaj_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="MAHARAJ"
                    android:textColor="#ff00"
                    android:layout_marginTop="-10dp"
                    android:textSize="40dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSilver"
            android:layout_margin="5dp"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:text="Pre-Application Analysis Form"
                android:layout_gravity="center"
                android:gravity="center"/>

            <EditText
                android:id="@+id/pre_analysis_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColor="@color/colorBlack"
                android:layout_margin="8dp"
                android:backgroundTint="@color/colorBlack"
                android:textColorHint="@color/colorSilver"/>

            <EditText
                android:id="@+id/pre_analysis_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:maxLength="2"
                android:inputType="number"
                android:textColor="@color/colorBlack"
                android:layout_margin="8dp"
                android:backgroundTint="@color/colorBlack"
                android:textColorHint="@color/colorSilver"/>


            <EditText
                android:id="@+id/pre_analysis_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:textColor="@color/colorBlack"
                android:layout_margin="8dp"
                android:backgroundTint="@color/colorBlack"
                android:textColorHint="@color/colorSilver"/>

            <EditText
                android:id="@+id/pre_analysis_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:textColor="@color/colorBlack"
                android:layout_margin="8dp"
                android:backgroundTint="@color/colorBlack"
                android:textColorHint="@color/colorSilver"/>

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/pre_analysis_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorSilver">

            </View>
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/pre_analysis_profession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorSilver">

            </View>
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/pre_analysis_land"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorSilver">

            </View>
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/pre_analysis_landtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp"

                />
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                android:background="@color/colorSilver">

            </View>
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/pre_analysis_landsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                android:background="@color/colorSilver">

            </View>

            <Button
                android:id="@+id/pre_analysis_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:background="@drawable/round_cornerbtn"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="Next"/>



        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>