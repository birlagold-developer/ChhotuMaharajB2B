<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:clickable="true"
    tools:context=".activities.LiveDemoVisitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Demo Visit"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/live_demo_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorSilver">

        </View>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/live_demo_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorSilver">

        </View>
        <EditText
            android:id="@+id/booking_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_event_black_24dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="Date"
            android:layout_margin="8dp"
            android:singleLine="true"
            android:editable="false"
            android:clickable="true"
            android:focusable="false"
            android:textColor="#333"
            android:paddingLeft="10dp"
            android:textColorHint="#333"
            android:textSize="16dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorSilver">

        </View>
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/live_demo_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorSilver">

        </View>

        <LinearLayout
            android:id="@+id/amount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="Amount :"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_gravity="right"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="Rs 10,000"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/terms_condition_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/appointment_reg_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#1181de"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/appointment_terms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I Accept Terms &amp; Condition"
                android:textColor="#1181de"
                android:textSize="15dp" />


        </LinearLayout>


        <Button
            android:id="@+id/appointment_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_cornerbtn"
            android:layout_marginTop="40dp"
            android:text="Submit"/>
    </LinearLayout>

</LinearLayout>